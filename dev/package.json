{
  "name": "soundworks-template",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "description": "soundworks#v4 application template",
  "license": "BSD-3-Clause",
  "version": "4.0.0-alpha.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run clean && sass src/clients/styles:.build/public/css && soundworks-build -b",
    "build:production": "npm run clean && soundworks-build -b -m",
    "clean": "soundworks-build -D",
    "dev": "npm run build && (concurrently -i -p \"none\" \"npm run watch-process:inspect server\" \"soundworks-build -b -w\" \"npm run watch-sass\")",
    "postinstall": "soundworks-build -C",
    "start": "node .build/server/index.js",
    "watch-process": "soundworks-build -p",
    "watch-process:inspect": "soundworks-build -d -p",
    "watch-sass": "sass --watch src/clients/styles:.build/public/css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-template"
  },
  "dependencies": {
    "@ircam/simple-components": "^2.0.1",
    "@soundworks/core": "^3.1.0",
    "@soundworks/helpers": "^2.0.0",
    "json5": "^2.2.1",
    "lit": "^2.2.2"
  },
  "devDependencies": {
    "@soundworks/create": "^3.2.0",
    "@soundworks/build": "^3.2.0",
    "concurrently": "^7.1.0",
    "sass": "^1.51.0"
  }
}
